# --- 阶段 1: 构建 (Build) ---
FROM node:18-alpine AS builder

WORKDIR /app

# 复制依赖定义
COPY package.json package-lock.json ./

# 安装依赖
RUN npm ci

# 复制源码
COPY . .

# 构建生产环境代码 (生成 dist 目录)
RUN npm run build

# --- 阶段 2: 运行 (Serve) ---
FROM nginx:alpine

# 从 Builder 阶段复制构建好的静态文件到 Nginx 目录
COPY --from=builder /app/dist /usr/share/nginx/html

# 复制自定义的 Nginx 配置 (可选，用于处理 React Router 刷新 404 问题)
# 这里我们直接用一行命令生成简单配置
RUN echo 'server { \
    listen 80; \
    location / { \
    root /usr/share/nginx/html; \
    index index.html index.htm; \
    try_files $uri $uri/ /index.html; \
    } \
    }' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]